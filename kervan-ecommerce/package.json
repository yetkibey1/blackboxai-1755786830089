{
  "name": "kervan-backend",
  "version": "1.0.0",
  "description": "KERVAN - Complete Wholesale E-commerce Platform Backend",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "concurrently \"nodemon server.js\" \"cd client && npm start\"",
    "server": "nodemon server.js",
    "client": "cd client && npm start",
    "build": "cd client && npm run build",
    "heroku-postbuild": "npm install && cd client && npm install && npm run build",
    "init-db": "node scripts/initDB.js",
    "setup": "node setup.js",
    "setup:quick": "chmod +x quick-setup.sh && ./quick-setup.sh",
    "setup:windows": "quick-setup.bat",
    "postinstall": "echo 'Run npm run setup for interactive configuration or npm run setup:quick for quick setup'"
  },
  "keywords": ["ecommerce", "wholesale", "nodejs", "react", "mongodb"],
  "author": "KERVAN Team",
  "license": "ISC",
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^7.5.0",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.4",
    "express-rate-limit": "^6.10.0",
    "helmet": "^7.0.0",
    "express-validator": "^7.0.1",
    "slugify": "^1.6.6",
    "xlsx": "^0.18.5",
    "crypto": "^1.0.1",
    "path": "^0.12.7"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "concurrently": "^8.2.0"
  }
}
